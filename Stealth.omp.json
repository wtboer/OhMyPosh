{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        { "type":"python",
          "style":"powerline",
          "foreground":"#0f62fe",
          "background":"#393939",
          "properties": {
            "fetch_virtual_env": true,
            "template": "{{ if .Error }}{{ .Error }}{{ else }}{{ if .Venv }}{{ .Venv }} {{ end }}{{ .Full }}{{ end }}"
          }
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "î‚°",
          "foreground": "#f4f4f4",
          "background": "#393939",
          "properties": {
            "style": "full",
            "template": " {{.Path}} "
          }
        },
        {
          "type": "poshgit",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#f4f4f4"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#f4f4f4",
          "properties": {
            "template": "\uf503 {{ .UserName }}"
          }
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#a8a8a8",
          "properties": {
            "template": " {{ .CurrentDate | date .Format }} ",
            "time_format": "15:04:05"
          }
        }

      ]
    },
    {
      "type":"prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "#0f62fe",
          "properties": {
            "template": "\uFF04"
          },
          "style": "plain",
          "type": "root"
        },
        {
          "foreground": "#f4f4f4",
          "properties": {
            "template": "\uFF04"
          },
          "style": "plain",
          "type": "text"
        }
      ]
    }
  ],
  "final_space": false,
  "version": 1
}
